<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <t t-name="counter.template">
        <div class="oe_kanban_global_click o_kanban_record">
            <span class="val">
                <t t-esc="widget.count"/>
            </span>

            <div class="oe_kanban_details">
                <button class="increment o_kanban_record_title">
                    <span>Increment (+)</span>
                </button>

                <button class="decrement o_kanban_record_title">
                    <span>Decrement (-)</span>
                </button>
            </div>
        </div>
    </t>
</odoo>