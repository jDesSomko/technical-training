<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <t t-name="awesome_tshirt.Buttons">
        <div>
            <button class="btn btn-primary open_customers" name="Customers">Customers</button>
            <button class="btn btn-primary new_orders" name="New Orders">New Orders</button>
            <button class="btn btn-primary cancelled_orders" name="Cancelled Orders">Cancelled Orders</button>
        </div>
    </t>

    <t t-name="awesome_tshirt.Dashboard">
        <div>
            <div class="counter dashboard-border"/>

            <div class="statistics dashboard-border">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Number of new orders this month</td>
                            <td><t t-esc="widget.statistics.nb_new_orders"/></td>
                        </tr>
                        <tr>
                            <td>Total amount of orders this month</td>
                            <td><t t-esc="widget.statistics.total_amount"/></td>
                        </tr>
                        <tr>
                            <td>Number of cancelled orders this month</td>
                            <td><t t-esc="widget.statistics.nb_cancelled_orders"/></td>
                        </tr>
                        <tr>
                            <td>Average amount of t-shirt by order this month</td>
                            <td><t t-esc="widget.statistics.average_quantity"/></td>
                        </tr>
                        <tr>
                            <td>Average time for an order to go from 'new' to 'sent' or 'cancelled'</td>
                            <td><t t-esc="widget.statistics.average_time"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="pie dashboard-border"/>
        </div>
    </t>
</odoo>